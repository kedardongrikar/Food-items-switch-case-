#include<stdio.h>
main()
{
	printf("pick a food item : \n1. Pizza\n2. Burger\n3. Pasta\n4. French Fries\n5. Sandwich");
	int choice=0;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			printf("Food item Pizza\n Price=Rs239");
			break;
		case 2:
			printf("Food item Burger\n Price=Rs129");
			break;
		case 3:
			printf("Food item Pasta\n Price=Rs159");		
			break;
		case 4:
			printf("Food item French Fries\n Price=Rs89");
			break;	
		case 5:
			printf("Food item Sandwich\n Price=Rs119");
			break;
		default : printf("Invalid choice");	
	}
}
